  "main": "dist/draftjs-conductor.cjs.js",
  "module": "dist/draftjs-conductor.esm.js",
  "types": "dist/draftjs-conductor.d.ts",
  "sideEffects": false,
  "keywords": [
    "draftjs",
    "draft-js",
    "editor",
    "react",
    "wysiwyg",
    "rich text",
    "richtext",
